{% extends "base.html.twig" %}

{% block title %}Voir les posts
{% endblock %}

{% block body %}
	<h1 style="text-align: center;">Bienvenue sur mon blog Symfony !</h1>

	{% if posts is defined %}
		{% for post in posts %}
			<h2>{{post.title}}</h2>
			<p>{{post.body}}</p>
			<h3>Nombre de likes :
				{{post.nbLikes}}</h3>
			<h4>Date de création :
				{{post.createdAt.format('d-m-Y')}}</h4>
			<hr>
		{% endfor %}
	{% else %}
		Le post a bien été créé !
	{% endif %}
{% endblock %}
